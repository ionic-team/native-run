{
  "name": "native-run",
  "version": "0.0.1",
  "description": "A CLI for running apps on iOS/Android devices and simulators/emulators",
  "bin": {
    "native-run": "./bin/native-run"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "prepublishOnly": "npm run build",
    "precommit": "npm run lint"
  },
  "main": "dist/index.js",
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=8.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/native-run.git"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "elementtree": "^0.1.7",
    "ini": "^1.3.5",
    "split2": "^3.0.0",
    "through2": "^2.0.3",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/debug": "0.0.30",
    "@types/ini": "^1.3.29",
    "@types/node": "~8.9.0",
    "@types/split2": "^2.1.6",
    "@types/through2": "^2.0.33",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-ionic-rules": "0.0.17",
    "typescript": "^3.0.1"
  },
  "keywords": [
    "android",
    "ios",
    "cli",
    "mobile",
    "app",
    "hybrid",
    "native"
  ],
  "author": "Ionic Team <hi@ionicframework.com> (https://ionicframework.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ionic-team/native-run/issues"
  },
  "homepage": "https://github.com/ionic-team/native-run#readme",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
