{
  "name": "native-run",
  "version": "1.0.0",
  "description": "A CLI for running apps on iOS/Android devices and simulators/emulators",
  "bin": {
    "native-run": "./bin/native-run"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "test": "jest --maxWorkers=4",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "publish:ci": "semantic-release",
    "publish:testing": "npm version prerelease --preid=testing --no-git-tag-version && npm publish --tag=testing && git stash",
    "prepublishOnly": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "main": "dist/index.js",
  "files": [
    "assets",
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=10.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/native-run.git"
  },
  "dependencies": {
    "@ionic/utils-fs": "^3.0.0",
    "bplist-parser": "0.2.0",
    "debug": "^4.1.1",
    "elementtree": "^0.1.7",
    "ini": "^1.3.5",
    "plist": "^3.0.1",
    "split2": "^3.1.0",
    "through2": "^3.0.0",
    "tslib": "^1.9.3",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^7.0.8",
    "@types/debug": "4.1.5",
    "@types/elementtree": "^0.1.0",
    "@types/fs-extra": "^8.0.0",
    "@types/ini": "^1.3.30",
    "@types/jest": "^25.1.0",
    "@types/node": "^10.17.14",
    "@types/plist": "^3.0.2",
    "@types/split2": "^2.1.6",
    "@types/through2": "^2.0.34",
    "@types/yauzl": "^2.9.1",
    "husky": "^4.0.9",
    "jest": "^26.0.1",
    "jest-cli": "^25.1.0",
    "semantic-release": "^15.13.12",
    "ts-jest": "^25.2.1",
    "tslint": "^5.12.1",
    "tslint-ionic-rules": "0.0.21",
    "typescript": "~3.8.2",
    "typescript-tslint-plugin": "^0.5.2"
  },
  "release": {
    "branch": "stable",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "keywords": [
    "android",
    "ios",
    "cli",
    "mobile",
    "app",
    "hybrid",
    "native"
  ],
  "author": "Ionic Team <hi@ionicframework.com> (https://ionicframework.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ionic-team/native-run/issues"
  },
  "homepage": "https://github.com/ionic-team/native-run#readme"
}
