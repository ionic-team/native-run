{
  "name": "native-run",
  "version": "0.0.17",
  "description": "A CLI for running apps on iOS/Android devices and simulators/emulators",
  "bin": {
    "native-run": "./bin/native-run"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "test": "jest --maxWorkers=4",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "main": "dist/index.js",
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=8.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/native-run.git"
  },
  "dependencies": {
    "@ionic/utils-fs": "^1.0.0",
    "debug": "^4.1.1",
    "elementtree": "^0.1.7",
    "ini": "^1.3.5",
    "node-ioslib": "0.0.7",
    "split2": "^3.1.0",
    "through2": "^3.0.0",
    "tslib": "^1.9.3",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@types/debug": "0.0.31",
    "@types/elementtree": "^0.1.0",
    "@types/fs-extra": "^5.0.4",
    "@types/ini": "^1.3.30",
    "@types/jest": "^23.3.13",
    "@types/node": "^8.10.39",
    "@types/split2": "^2.1.6",
    "@types/through2": "^2.0.34",
    "@types/yauzl": "^2.9.1",
    "husky": "^2.1.0",
    "jest": "^24.0.0",
    "jest-cli": "^24.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.12.1",
    "tslint-ionic-rules": "0.0.21",
    "typescript": "^3.2.4"
  },
  "keywords": [
    "android",
    "ios",
    "cli",
    "mobile",
    "app",
    "hybrid",
    "native"
  ],
  "author": "Ionic Team <hi@ionicframework.com> (https://ionicframework.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ionic-team/native-run/issues"
  },
  "homepage": "https://github.com/ionic-team/native-run#readme"
}
